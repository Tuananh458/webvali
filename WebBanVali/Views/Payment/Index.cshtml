
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<div class="page-breadcrumbs">
    <div class="container">
        <ul>
            <li><a href="index.html">Trang chủ</a></li>
            <li><a href="#" title="Phụ kiện du lịch">Thanh Toán</a></li>
        </ul>
    </div>
</div>

<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Chi Tiết Thanh Toán</h4>
            @model  WebBanVali.Controllers.Order

            <form action="@Url.Action("PlaceOrder", "Payment")" method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Tên<span>*</span></p>
                                    <input type="text" name="Name" placeholder="ex. Trần Văn A" value="@Model.khachHang.TenKhachHang" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Dịa chỉ<span>*</span></p>
                            <input type="text" name="Address" placeholder="ex. 02 Thanh Sơn, Thanh Bình, Hải Châu, Đà Nẵng" class="checkout__input__add" required>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" name="Phone" placeholder="ex. 0912345678" value="@Model.khachHang.SoDienThoai" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="email" name="Email" placeholder="ex. abc@gmail.com" required>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Order notes<span>*</span></p>
                            <input type="text" name="Note" placeholder="Ghi chú cụ thể như giờ giao có thể nhận hàng được, đặt hàng hộ,...">
                        </div>
                    </div>
                    <!-- Order Summary -->
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (CartItem item in Model.GetLISTCARTS)
                                {
                                    <li>@item.TenChiTietSP <span>@item.ThanhTien</span></li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>@Model.SubTotal</span></div>
                            <div class="checkout__order__total">Total <span>@Model.Total</span></div>

                            <!-- Payment Method -->
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Check Payment
                                    <input type="checkbox" id="payment" name="PaymentMethod" value="check">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Paypal
                                    <input type="checkbox" id="paypal" name="PaymentMethod" value="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>



        </div>
    </div>
</section>
<!-- Checkout Section End -->
